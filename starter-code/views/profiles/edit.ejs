<h2>Edit your profile</h2>
<div class="row">
	<div class="col-sm-6">
		<form action="/profiles/<%= user._id %>" method="POST">
			<div class="form-group">
			  <label for="name" class="control-label">Name</label>
			  <input type="text" class="form-control" name="name" id="name" required value="<%= user.name %>"/>
			</div>
			<div class="form-group">
				<label for="password" class="control-label">Password</label>
				<input type="password" class="form-control" name="password" id="password" value="<%= user.password %>"/>
			</div>
			<div class="form-group">
				<label for="email" class="control-label">Email</label>
				<input type="email" class="form-control" name="email" id="email" required value="<%= user.email %>"/>
			</div>
			<div class="form-group">
				<label for="summary" class="control-label">Summary</label>
				<textarea class="form-control" name="summary" rows="10" id="summary"><%= user.summary %></textarea>
			</div>
			<div class="form-group">
				<label for="imageUrl" class="control-label">Image url</label>
				<input type="url" class="form-control" name="imageUrl" id="imageUrl" value="<%= user.imageUrl %>"/>
			</div>
			<div class="form-group">
			  <label for="company" class="control-label">Company</label>
			  <input type="text" class="form-control" name="company" id="company" value="<%= user.company %>"/>
			</div>
			<div class="form-group">
			  <label for="jobTitle" class="control-label">Job title</label>
			  <input type="text" class="form-control" name="jobTitle" id="jobTitle" value="<%= user.jobTitle %>"/>
			</div>
			<% if (locals.errorMessage) { %>
			  <div class="alert alert-danger"><%= errorMessage %></div>
			<% } %>

			<button type="submit" class="btn btn-primary">Save</button>
		</form>
	</div>
</div>