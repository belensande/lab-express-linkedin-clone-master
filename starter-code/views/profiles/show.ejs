<div class="list-group-item profile-header">
	<img src="<%= profileUser.imageUrl || noImage %>" class="img-thumbnail"/>
	<h2><%= profileUser.name %></h2>
	<% if (locals.user && user._id != profileUser._id && !friends) { %>
		<form action="/relations/<%= user._id %>/request/<%= profileUser._id %>" method="POST">
            <button type="submit" class="btn btn-default space-left">Send request</button>
        </form>
	<% } %>
</div>
<br>
<div class="list-group-item">
	<h4>Compay: <%= profileUser.company %><h4/>
	<h4>Job: <%= profileUser.jobTitle %><h4/>
	<% if (locals.logged) { %>
		<h4>Email: <%= profileUser.email %><h4/>
	<% } %>
</div>
<br>
<% if (locals.logged) { %>
	<div class="list-group-item">
		<p align="justify"><%= profileUser.summary %></p>
	</div>
	<br>
<% } %>
<% if (locals.logged && user._id == profileUser._id) { %>
	<a href="/profiles/<%= user._id %>/edit" class="btn btn-primary">Edit</a>
<% } %>